<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserHomeActivity">



<RelativeLayout
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/user_avatar"
        app:qmui_corner_radius="40dp"
        android:layout_width="64dp"
       android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/avatar"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/user_username"
        android:text="用户名"
        android:textSize="22sp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<!--    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton-->
<!--        android:layout_width="140px"-->
<!--        app:qmui_borderColor="@color/cook_app_yellow"-->
<!--        app:qmui_backgroundColor="@color/cook_app_yellow"-->
<!--        android:textColor="@color/white"-->
<!--        app:qmui_radius="4dp"-->
<!--        android:text="+ 关注"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginRight="30dp"-->
<!--        android:layout_height="80px"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/user_desc"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/user_avatar"
        android:text="这个人很懒，什么都没留下"
        android:layout_height="wrap_content"/>


</RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/count_fllow"
                android:layout_width="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="关注"
                 android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/count_fans"
                android:layout_width="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_width="wrap_content"
                android:text="粉丝"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="228"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="浏览量"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_create"
        android:scrollbars="none"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_class_food_list"
        android:layout_height="wrap_content"/>
</LinearLayout>