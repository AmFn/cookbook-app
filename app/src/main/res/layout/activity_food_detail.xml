<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cook_app_yellow"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar

        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:qmui_topbar_title_text_size="18sp"
        android:layout_height="?attr/qmui_topbar_height"/>


    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white">





        <com.xuexiang.xui.widget.statelayout.MultipleStatusView
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:id="@+id/my_multiple_status_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msv_errorView="@layout/msv_layout_error_view_view"
            app:msv_loadingView="@layout/layout_loading_view"
            app:msv_contentView="@layout/layout_content_view"/>


    </RelativeLayout>


</LinearLayout>