<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home1_container"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cook_app_yellow"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

<!--    <com.qmuiteam.qmui.widget.QMUITopBar-->
<!--        android:id="@+id/topbar"-->
<!--        android:layout_width="match_parent"-->
<!--       app:qmui_topbar_title_text_size="18sp"-->
<!--        android:layout_height="?attr/qmui_topbar_height"/>-->

<com.qmuiteam.qmui.widget.QMUITopBarLayout
    android:id="@+id/topbar"
    android:background="@color/cook_app_yellow"
       android:layout_width="match_parent"
      app:qmui_topbar_title_text_size="18sp"
     android:layout_height="?attr/qmui_topbar_height"
    >

    <com.xuexiang.xui.widget.imageview.IconImageView
        android:id="@+id/add_recipe"
        android:layout_width="26dp"
        android:layout_height="19dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/icon_add" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center">

            <EditText
                android:id="@+id/edt_search"
               android:layout_centerInParent="true"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:text="搜索菜谱、食谱等"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:background="@drawable/bg_input_translucent"/>

        <com.xuexiang.xui.widget.imageview.IconImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/edt_search"
            android:src="@mipmap/icon_search"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>


    <com.xuexiang.xui.widget.imageview.IconImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/icon_msg"

        android:layout_gravity="right|center"
       />

</com.qmuiteam.qmui.widget.QMUITopBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
           >


            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"




                >
<!--                <com.xuexiang.xui.widget.banner.recycler.BannerLayout-->

<!--                    android:id="@+id/sm_banner"-->
<!--                    app:bl_showIndicator="false"-->

<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:bl_autoPlaying="true"-->
<!--                    app:bl_centerScale="1.3"-->
<!--                    app:bl_itemSpace="8dp"-->
<!--                    app:bl_moveSpeed="1.8" />-->

                <com.xuexiang.xui.widget.banner.widget.banner.SimpleImageBanner
                    android:id="@+id/sib_simple_banner"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    app:bb_indicatorGravity="CENTER"
                    app:bb_indicatorCornerRadius="4dp"
                    app:bb_indicatorHeight="8dp"
                    app:bb_indicatorWidth="8dp"
                    app:bb_indicatorSelectColor="@color/yellow_primary"
                    app:bb_scale="0.5625" />

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/recyclerView_menu"
                 tools:listitem="@layout/item_menu_list"
                 android:layout_marginTop="10dp"
                 app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                 android:background="@color/white"
                 android:layout_below="@+id/sib_simple_banner"
                 android:layout_height="100dp"
                 android:layout_width="wrap_content"/>

                <View
                    android:id="@+id/view_line_1"
                    android:layout_below="@+id/recyclerView_menu"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/gray_very_light"
                    />

                <RelativeLayout
                    android:id="@+id/hot"
                    android:layout_below="@+id/view_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"

                    >
                    <TextView
                        android:id="@+id/tv_hot_recommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:textSize="18sp"
                        android:textColor="@color/cook_context_black"
                        android:text="热门推荐"/>

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_hot_recommended"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_hot"/>
                    <TextView
                        android:id="@+id/tv_enter1"
                        android:layout_toLeftOf="@+id/iv_enter1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/cook_context_black"
                        android:text="更多"/>
                    <com.xuexiang.xui.widget.imageview.IconImageView

                        android:id="@+id/iv_enter1"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@mipmap/icon_inter"
                      android:layout_marginTop="2dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/icon_inter"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        tools:listitem="@layout/item_home_food_list"
                        android:layout_below="@+id/tv_hot_recommended"
                        android:id="@+id/rv_food_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view_line_2"
                        android:layout_below="@+id/rv_food_list"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/gray_very_light"/>

                </RelativeLayout>

                <RelativeLayout

                    android:layout_below="@+id/hot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"

                    >
                    <TextView
                        android:id="@+id/tv_new_recommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:textSize="18sp"
                        android:textColor="@color/cook_context_black"
                        android:text="最新推荐"/>

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_new_recommended"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_new"/>
                    <TextView
                        android:id="@+id/tv_enter2"
                        android:layout_toLeftOf="@+id/iv_enter2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/cook_context_black"
                        android:text="更多"/>
                    <com.xuexiang.xui.widget.imageview.IconImageView

                        android:id="@+id/iv_enter2"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@mipmap/icon_inter"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/icon_inter"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        tools:listitem="@layout/item_home_food_list"
                        android:layout_below="@+id/tv_new_recommended"
                        android:id="@+id/rv_food_list2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view_line_3"
                        android:layout_below="@+id/rv_food_list2"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/gray_very_light"/>

                </RelativeLayout>



            </RelativeLayout>




        </ScrollView>

    </LinearLayout>