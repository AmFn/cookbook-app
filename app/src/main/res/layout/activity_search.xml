<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
    android:layout_width="match_parent"
        android:background="@color/white"
    android:layout_height="30dp"/>
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:background="@color/white"
        android:layout_width="match_parent"

        android:layout_height="?attr/qmui_topbar_height"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_icon_back"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_back"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

           <RelativeLayout android:layout_height="wrap_content"
               android:layout_weight="5"
               android:layout_width="wrap_content">

               <EditText
                   android:layout_marginLeft="20dp"
                   android:imeOptions="actionSearch"
                   android:id="@+id/edt_search"
                   android:layout_gravity="center_vertical"

                   android:layout_width="240dp"
                   android:layout_height="30dp"
                   android:hint="搜索菜谱、食谱等"
                   android:inputType="text"
                   android:textColor="@color/gray"
                   android:textSize="16sp"
                   android:background="@drawable/bg_input_search"/>

               <com.xuexiang.xui.widget.imageview.IconImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_alignLeft="@+id/edt_search"
                   android:src="@mipmap/icon_search"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="8dp"/>
           </RelativeLayout>
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_search"
                android:layout_weight="2"
                app:qmui_radius="4dp"
                android:layout_width="56dp"
                android:layout_height="30dp"
                app:qmui_borderColor="@color/yellow_light3"
                app:qmui_backgroundColor="@color/cook_app_yellow"
                android:text="搜索"
                android:textColor="@color/cook_bg_grey"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="20dp"

                />

        </LinearLayout>




    </com.qmuiteam.qmui.widget.QMUITopBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>